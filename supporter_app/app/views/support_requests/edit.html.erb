<h1>Edit Support Request</h1>
<%= @support_request.errors.full_messages.join(", ") %>
<%= form_for @support_request do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :department %>
    <%= if @support_request.department == 'Sales'
          f.radio_button :department, 'Sales', :checked => true
        else
          f.radio_button :department, 'Sales'
        end
    %>
    <%= f.label :department_sales, 'Sales' %>

    <%= if @support_request.department == 'Marketing'
          f.radio_button :department, 'Marketing', :checked => true
        else
          f.radio_button :department, 'Marketing'
        end
    %>
    <%= f.label :department_marketing, 'Marketing' %>

    <%= if @support_request.department == 'Techical'
          f.radio_button :department, 'Techical', :checked => true
        else
          f.radio_button :department, 'Techical'
        end
    %>
    <%= f.label :department_technical, 'Techical' %>
  </div>
  <div>
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
